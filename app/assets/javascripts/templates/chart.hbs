<div class="hidden">
  {{render "timeframe" timeframe}}
</div>

<div class="chart-header">
  <div class="prev-container">
    <a class="btn" {{action "prev"}}><i class="icon-chevron-left"></i></a>
  </div>
  <div class="info-box">
    Showing {{durationStr}} hours in {{content.nrBars}} bars.
  </div>
  <div class="next-container">
    <a class="btn" {{action "next"}}><i class="icon-chevron-right"></i></a>
  </div>
  <div class="timeframe-selection-buttons btn-group">
    {{#view Statt.DaterangeCalendarButton}}
      <i class="icon-calendar"></i>
    {{/view}}
    {{#view Statt.DaterangeSelectButton}}
      <i class="icon-time"></i>
    {{/view}}
    </a>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div id="chart_container">
      <svg class="chart" {{bindAttr width="width" height="height"}}>
        <rect class="highlight" {{bindAttr
          x="highlightX"
          y="highlightY"
          width="highlightWidth"
          height="highlightHeight"
        }}></rect>
        <g {{bindAttr transform="transform"}}>
          
          {{! where bars used to be
              <rect class="bar" x y width height>
          }}
          
          <text class="info" x="0" y="10">from: {{fromStr}}</text>
          <text class="info" x="0" y="20">to: {{toStr}}</text>
          <text class="info" x="0" y="30">bars: {{content.nrBars}}</text>
        </g>
      </svg>
      <svg class="axis" {{bindAttr width="width"}} height="20">
        {{! the D3 axis is defined in ChartView.didInsertElement() }}
      </svg>
    </div>
  </div>
</div>

{{outlet}}