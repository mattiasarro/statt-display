!!!
%html
  %head
    %title Display
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    
    #wrapper
      #header
        #sites
          %a{href: '/'} Home
          - if user_logged_in?
            = '::'
            = link_to "Your sites", sites_path
        #auth
          - if user_logged_in?
            = link_to current_user, edit_user_path(current_user)
            = '::'
            = link_to "Log out", log_out_path
          - else
            = link_to "Log in", log_in_path
          
      = render 'flashes'
      = yield