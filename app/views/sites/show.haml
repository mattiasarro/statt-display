%h1= @site.name

= link_to "Settings", edit_site_path(@site)
\|
= link_to "Tracking code", action: :tracking_code

#chart_container
  .explain
    Showing
    = form_for @graph, {url: site_path(@site), method: :get} do |f|
      = f.select :type, options_for_select([["60 minutes", "hour"]])
      beginning at
      = f.datetime_select :from, order: [:day, :month, :year, :hour, :minute]
      = f.submit "Update graph"
  
  = render "graph_data/#{@graph.type}", graph: @graph

%p
  Group by visitors?
  = check_box :asdf, :asdf
