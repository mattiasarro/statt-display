= content_for :head do
  = javascript_include_tag "d3"

.chart-header
  .prev-container
    %a.btn{href: site_path(@site, graph: @graph.query_params(:prev))}
      %i.icon-chevron-left
  .info-box
    Showing #{distance_of_time_in_words @graph.from, @graph.to } 
    in #{@graph.nr_bars} bars
  .next-container
    %a.btn{href: site_path(@site, graph: @graph.query_params(:next))}
      %i.icon-chevron-right
  .timeframe-selection-buttons.btn-group
    %a.btn#daterange-select{"data-toggle" => "button"}
      %i.icon-calendar
    %a.btn#daterange-select-form{"data-toggle" => "button"}
      %i.icon-time

.row
  .span12
    #chart_container

= render "loads/index"

= render "graph/daterange_select_dropdowns"
= render "graph/data", graph: @graph

