%h1= @site.name

= link_to "Settings", edit_site_path(@site)
\|
= link_to "Tracking code", action: :tracking_code

%h2 Visitors

%table.visitors
  %tr
    %th User ID
  - @site.visitors.each_with_index do |visitor, i|
    %tr.visitor{"data-id" => visitor.id, class: (i % 2 == 0 ? "odd" : "even")}
      %td= visitor
    %tr.visitor-loads{id: "visitor-#{visitor.id}-loads"}
      %td= render 'loads/list', loads: visitor.loads