= form_for @user, html: {class: "form-horizontal"} do |f|
  %fieldset
    %legend User Account Settings
    
    .control-group
      %label.control-label{for: "user_name"} Name:
      .controls
        = f.text_field :name, disabled: true
    .control-group
      %label.control-label{for: "user_provider"} Authentication provider:
      .controls
        = f.text_field :provider, disabled: true
        
    .control-group
      %label.control-label{for: "user_uid"} User ID:
      .controls
        = f.text_field :uid, disabled: true
        
    .control-group      
      %label.control-label{for: "user_email"} E-mail:
      .controls
        = f.text_field :email
    .control-group
      .controls
        %button.btn{type: "submit"} Save changes