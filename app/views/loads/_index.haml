.info-header
  %ul.nav.nav-tabs
    %li
      %a{href: "#"} Visitors
    %li.active
      %a{href: "#"} Loads
    %li
      %a{href: "#"} Nodes
  .pagination
    %ul
      %li{class: ('disabled' if @ui.loads_pages.prev.disabled?)}
        = link_to "«", @ui.loads_pages.prev.uri_hash

      = render "pagination_window", pages: @ui.loads_pages.windows[0]
      = render "pagination_window", pages: @ui.loads_pages.windows[1], separator: (@ui.loads_pg > 6)
      = render "pagination_window", pages: @ui.loads_pages.windows[2], separator: (@ui.loads_pg < 10)
      
      %li{class: ('disabled' if @ui.loads_pages.next.disabled?)}
        = link_to "»", @ui.loads_pages.next.uri_hash

.loads
  .loads-col
  .loads-col
  .loads-col
    - if false
      .load
        %span.uid &nbsp;
        %span.time 18:30
        %span.top /path/to/blog/post